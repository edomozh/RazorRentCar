@page
@model AllCarsModel
@{
    ViewData["Title"] = "Cars";
}

<table id="filterabletable"
       data-filter-control="true"
       class="table table-bordered text-break">
    <thead>
        <tr class="">
            <th class="" data-field="name" data-filter-control="input">@Html.DisplayNameFor(m => m.Cars.First().Name)</th>
            <th class="" data-field="type" data-filter-control="select">@Html.DisplayNameFor(m => m.Cars.First().SegmentId)</th>
            <th class="" data-field="mileage">Пробег</th>
            <th class="" data-field="checkmileagein">Следующий пробег</th>
            <th class="" data-field="domaintenancein">Следующий ТО</th>
            <th class="" data-field="buttons"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr class="bg-@Model.Colors[car.Id] bg-opacity-50">
                <td class="" style="border-color: @car.Color">
                    <a class="nav-link text-primary" asp-area="" asp-page="/Cars/Car" asp-route-id="@car.Id">@car.Name</a>
                </td>
                <td class="d-none d-md-table-cell">@car.Segment?.Name</td>
                <td class="">@Model.Mileages[car.Id]</td>
                <td class="">@Model.NextMilleageCheckups[car.Id]</td>
                <td class="">@Model.NextMaintenanceСheckup[car.Id]</td>
                <td class="">

                    <a class="btn btn-sm btn-outline-primary m-1" asp-page="/Cars/CarEdit" asp-route-id="@car.Id" title="Редактировать">
